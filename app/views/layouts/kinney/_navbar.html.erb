<div class="navbar" id="global_nav">
  <div class="navbar-inner">
    <div class="container">
 
      <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        MENU <i class="icon-arrow-down"></i>
      </a>
 
      <!-- Be sure to leave the brand out there if you want it shown -->
      <%= link_to 'Kinney', kinney.root_path, :class => :brand %>
      
      <!-- Everything you want hidden at 940px or less, place within here -->
      <div class="nav-collapse">
        <ul class="nav">
          <li class="<%= 'active' if controller?('clips') %>">
            <%= link_to 'Videos', kinney.clips_path %>
          </li>
          <li class="dropdown <%= 'active' if controller?('topics') %>">
            <%= link_to(kinney.topics_path, :class=> "dropdown-toggle", :'data-toggle' => :dropdown,
              :'data-target' => '#') do %>
              Topics <b class="caret"></b>
            <% end -%>
            <ul class="dropdown-menu" id="topics_nav">
              <% Kinney::Topic.with_clips.each do |topic| %>
                <%= content_tag('li', :class => topic_li_class(topic)) do %>
                  <%= link_to topic.name, topic %>
                <% end -%>
              <% end -%>
            </ul>
          </li>
          <li class="<%= 'active' if controller?('people') %>">
            <%= link_to 'People', kinney.people_path %>
          </li>
          
          <li class="<%= 'active' if action?('add_your_story') %>">
            <%= link_to 'Add Your Story', kinney.add_your_story_path %>
          </li>
          <li class="<%= 'active' if action?('about') %>">
            <%= link_to 'About', kinney.about_path %>
          </li>

        </ul>
      </div>
 
    </div>
  </div>
</div>