<%= link_to(person, :class => [:thumbnail, :person_read_more, :clearfix]) do %>
  <%= djatoka_square_image_tag person.image.filename, :scale => 150, :alt => person.full_name if person.image %> 
  <div class="bio">
    <%= person.short_bio %>
  </div>
  <%= t 'kinney.clips.show.read_more_about', :name => person.full_name %>     
<% end -%>