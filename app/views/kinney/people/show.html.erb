<%= content_for :header do %>
  <div class="row">
    <div class="span8 offset2">
      <h1 itemprop="name"><%= @person.full_name %></h1>    
    </div>
  </div>
<% end -%>

<div class='row' itemscope itemtype="http://schema.org/Person" itemref="header currently">

  <span itemprop="alumniOf" itemscope itemtype="http://schema.org/EducationalOrganization">
    <%# FIXME: make more abstract %>
    <meta itemprop="name" content="North Carolina State University">
  </span>

  <div itemprop="description">

    <div class="span8 offset2">
      <div id="bio" class="clearfix">
        <% if !@top_image.blank? %>
          <%= link_to(@top_image.external_url, :class => [:thumbnail, :image_modal_trigger], :'data-target'=>"#modal_image_top_pick", :id => "image_top_pick") do %>
            <%= kinney_image_small(@top_image) %>
          <% end -%>
          <%= render :partial => '/kinney/images/image_modal', :locals => {:index => 'top_pick', :person => @person, :image => @top_image} %>
        <% end -%>
        <%= raw @person.biography %>
      </div>

      <div id="person_clips">
        <% if !@person.clips.first.blank? %>      
          <h2><%= @person.last_name %> <%= t 'kinney.clips.plural' %></h2>
          <div>
            <%= link_to(@person.clips.first, :class => :thumbnail_video, :id => 'person_clips_image' ) do %>
              <div class="thumbnail_image">
                <%= image_tag @person.clips.first.png, :alt => @person.clips.first.title %>
              </div>          
            <% end -%>
          </div>
          <%= render :partial => '/kinney/people/person_clips', :locals => {:person => @person} %>
        <% end -%>
      </div>

      <%= render 'person_images' %>
      
    </div>    
  </div><!-- description -->
</div><!-- person -->

<div class="row">
  <div class="span8 offset2" id="profile_info">  
    <%= render 'profile' %>
    <%= render 'map' %>
    <br>
    <p id="bottom_actions">
      <% if @person.clips.count > 0 %>
        <%= link_to "#person_clips", class: [:btn] do %>
          <%= @person.last_name %> <%= t 'kinney.clips.plural' %>
        <% end -%>
      <% end -%>

      <%= link_to clips_path, class: [:btn] do %>
        <%= t 'kinney.people.plural' %>
      <% end -%>
    </p>   

  </div> 
</div>



