<% if clip.transcript_text? && clip.transcript_pdf? %>
  <div class="btn-group">
    <button type="button" class="btn btn-lg btn-default dropdown-toggle" data-toggle="dropdown" id="download_transcript_group">
      <%= t 'kinney.clips.show.download_transcript' %> <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" role="menu">
      <li><%= link_to t('kinney.clips.show.download_transcript_pdf'), clip.pdf_transcript, target: '_blank', id: 'download_transcript_pdf' %></li>
      <li><%= link_to t('kinney.clips.show.download_transcript_text'), clip.text_transcript, target: '_blank', id: 'download_transcript_text' %></li>
    </ul>
  </div>
<% elsif clip.transcript_text? -%>
  <%= link_to t('kinney.clips.show.download_transcript_text'), clip.text_transcript, class: 'btn btn-lg btn-default', target: '_blank', id: 'download_transcript_text' %>
<% elsif clip.transcript_pdf? %>
  <%= link_to t('kinney.clips.show.download_transcript_pdf'), clip.pdf_transcript, class: 'btn btn-lg btn-default', target: '_blank', id: 'download_transcript_pdf' %>
<% end %>