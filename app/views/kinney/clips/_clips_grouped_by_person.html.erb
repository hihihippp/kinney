<div class="row" id="clip_profiles">
  <% Kinney::Person.with_clips.each do |person| %>
    <div class="col-xs-6 col-sm-4 col-md-4 sortable_thumb <%= cycle('one', 'two', 'three', name: '3-col') %> <%= cycle('first', 'second', name: '2-col') %>">
     <h2><%= person.first_name %> <%= person.middle_name %> <span class="last_name"><%= person.last_name %></span><%= ', ' + person.name_suffix if !person.name_suffix.blank? %></h2>

      <%= link_to person.clips.first, :class => :thumbnail_video do %>
        <div class="thumbnail_image">
          <%= image_tag person.clips.first.png, :alt => person.clips.first.title %>
        </div>
      <% end -%>

      <ul class="nav nav-pills nav-stacked">
        <% person.clips.each do |clip| %>
          <li><%= link_to clip, :rel => :tooltip, :'data-original-title' => clip.description do %>
            <i class="icon-play"></i><%= clip.title %> <%= "(#{clip.duration_pretty})" if !clip.duration.blank? %>
          <% end -%>
          </li>
        <% end -%>
      </ul>
    </div>
  <% end -%>
</div>