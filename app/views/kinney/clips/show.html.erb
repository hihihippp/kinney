<% @title = @clip.title %>

<%= render :partial => '/layouts/kinney/social_setup' %>

<%= content_for :header do %>
  <div class="row">
    <div class="span12">
      <h1><%= @clip.people_names %><br><span itemprop="name"><%= @clip.title %></span></h1>      
    </div>
  </div>
<% end -%>

<div class="row" itemscope itemtype="http://schema.org/VideoObject" itemref="header">

  <meta itemprop="contentUrl"   content="<%= @clip.mp4 %>"/>
  <% if !@clip.duration.blank? %>
    <meta itemprop="duration"     content="<%= @clip.duration_iso8601 %>" />
  <% end -%>
  <meta itemprop="thumbnailUrl" content="<%= @clip.png %>" />
  <meta itemprop="uploadDate"   content="<%= @clip.created_at %>" />
  <meta itemprop="height"       content="272" />
  <meta itemprop="width"        content="480" />


  <div class="span8">
    <%= render :partial => '/kinney/video', :locals => {:clip => @clip} %>
    <div class="row">
      <div class="span6"
        <p itemprop="description"><%= @clip.description %> <%= t('.interview_on', :date => @clip.interview_date.to_formatted_s(:long)) if !@clip.interview_date.blank? %> <%= duration_pretty(@clip) %></p>
      </div>
      <div class="span2">
        <%= download_button(@clip) %>
      </div>
    </div>
    <div class="row-fluid" id="social">
      <div class="span12">
        <%= render '/layouts/kinney/social_like' %>
      </div>
    </div>

    <%= render '/kinney/webvtt' %>

  </div>


  <div class="span4">        
    <% @clip.people.each do |person| %>
      <% if person.clips.length > 1 %>
        <h2><%= t '.more_video_with', :name => person.full_name %></h2>
        <%= render :partial => '/kinney/people/person_clips', :locals => {:person => person, :current_clip => @clip} %>
      <% end -%>
    <% end -%>
    
    <div id="related_people">
      <% @clip.people.each do |person| %>
        <%= link_to(person, :class => :thumbnail) do %>
          <%= djatoka_square_image_tag person.image.filename, :scale => 150, :alt => person.full_name if person.image %> 
          <%= t '.read_more_about', :name => person.full_name %>       
        <% end -%>
      <% end -%>
    </div>

    <% if !@topic_clips.blank? %>
      <div class="well">
        <div id="topic_clips">
          <h3><%= t '.other_clips' %></h3>
          <div class="clips">
            <% @topic_clips.each do |clip| %>
              <%= render :partial => '/kinney/clip_link', :locals => {:clip => clip} %>
            <% end -%>
          </div>
        </div>
      </div>
    <% end -%>

  </div>
</div>



<%= content_for :catch do %>
  <div class="row">
    <div class="span12" id="people">
      <%= render :partial => '/kinney/video_profiles_thumbs', :locals =>
          {:current_clip => @clip, :title => t(:more_people)} %>
    </div>
  </div>
<% end -%>