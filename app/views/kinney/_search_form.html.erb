<%= form_tag search_path, :method => :get, :class => ['navbar-form'] do %>  
  <div class="input-append">
    <%#= label_tag :q, t('kinney.search.label') %>
    <%= text_field_tag :q, params[:q], :class => 'span2 search-query', :placeholder => 'Search' %><%= submit_tag t('kinney.search.submit_text'), :name => nil, :class => ['add-on'] %>
    
    <%= link_to t('kinney.search.clear'), search_path if defined?(@clips) %> 
  </div>
<% end %>
