<div id="search_form">
  <%= form_tag search_path, :method => :get do %> 
    <p>
      <%= label_tag :q, t('kinney.search.label') %>
      <%= text_field_tag :q, params[:q] %>
      <%= submit_tag t('kinney.search.submit_text'), :name => nil %>
      <%= link_to t('kinney.search.clear'), search_path if defined?(@clips) %>
    </p>
  <% end %>
</div>