<div id="search_form">
  <%= form_tag search_path, :method => :get do %> 
    <p>
      <%= label_tag :q, "Search" %>
      <%= text_field_tag :q, params[:q] %>
      <%= submit_tag "Search", :name => nil %>
      <%= link_to 'clear search', search_path if defined?(@clips) %>
    </p>
  <% end %>
</div>