<%= content_for :header do %>  
  <h1><%= @topic.name %></h1>
  <p><%= @topic.description %></p> 
<% end -%>

<div class="row">
  <div class="span12" id="clips">
    <% @topic.clips.each_slice(3) do |topic_clips| %>
      <ul class="thumbnails">
        <% topic_clips.each do |clip| %>
          <li class="span4 <%= cycle('left', 'middle', 'right') %>">
            <%= render :partial => '/kinney/clip_link', :locals => {:clip => clip} %>        
          </li>
          <% end -%>
        
      </ul>
    <% end -%>
  </div>
</div>


  
