$(function() {

  // Transcripts
  var num_of_rows_to_show = '3';

  $('#transcript_table')
  .find('tr:gt(' + num_of_rows_to_show + ')').hide().end()
  .after('<div id="more_transcript"><a id="more_transcript_button" class="btn btn-lg btn-default"><i class="icon-arrow-down"></i> <%= I18n.t('kinney.transcript.show_all') %></a><a id="hide_transcript_button" class="btn btn-lg btn-default" style="display:none;"><i class="icon-arrow-up"></i> <%= I18n.t('kinney.transcript.hide') %></a></div>');

  $('#transcript_table')
  .find('tr:nth-child(' + num_of_rows_to_show + ')').addClass('last');

  var toggles = function(){
    $('table')
    .find('tr:gt(' + num_of_rows_to_show + ')').toggle();
    $('#more_transcript a').toggle();
    $('table tr:nth-child(' + num_of_rows_to_show + ')').toggleClass('last');
    return false;
  }

  $("#more_transcript_button").click(function() {
    toggles();
  });
  $("#hide_transcript_button").click(function() {
    toggles();
  });

  $('video').on("pause ended", function(){document.title = document.title.replace("\u25B6","")});
  $('video').on("play", function(){document.title = "\u25B6" + document.title.replace("\u25B6","")});

});